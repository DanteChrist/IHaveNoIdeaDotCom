@model IEnumerable<IHAVENOIDEAS.Data.CodeIdea>

@{
    ViewData["Title"] = "Index";

    var random = new Random();
    var itemList = Model.ToList();
    var randomItem = itemList.Count > 0 ? itemList[random.Next(itemList.Count)] : null;
}

<body style="background-color:#ffe6f2;">

    <h1>Youw Kowd Idia...</h1>

    @if (randomItem != null)
    {
        <table class="table">
            <thead>
                
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => randomItem.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => randomItem.Description)
                    </td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <p>Thew is nowthwing :(</p>
    }
</body>







